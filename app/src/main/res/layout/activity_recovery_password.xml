<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".view.activity.ActivityLogin"
    android:id="@+id/lyt_recovery_password"
    >



    <include layout="@layout/toolbar_public"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="#4444aa"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="enter your email to recovery password"/>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16sp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginBottom="30sp"
                    android:hint="email"
                    android:drawableRight="@drawable/ic_email"
                    android:drawablePadding="16sp"/>


            </android.support.design.widget.TextInputLayout>






            <Button
                android:id="@+id/btn_recovery_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="recovery"
                android:layout_marginTop="10sp"
                android:textColor="@color/buttonsTextColor"
                android:padding="4dp"
                android:background="@drawable/back_buttons_public_ripple_effect"
                android:textSize="@dimen/buttonsTextSize"/>

            <ProgressBar
                android:id="@+id/prg_recovery_password"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/txt_recovery_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="#22aa22"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:gravity="center"
                android:visibility="gone"
                tools:text="new password sent to your email.please check your email"/>






        </LinearLayout>
    </ScrollView>


</LinearLayout>
