<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".view.activity.ActivityLogin"
    android:id="@+id/lyt_account"
    >



    <include layout="@layout/toolbar_public"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp">






            <Button
                android:id="@+id/btn_my_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="my posts"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:padding="7dp"
                android:textColor="@color/buttonsTextColor"
                android:background="@drawable/back_buttons_public_ripple_effect"
                android:textSize="@dimen/buttonsTextSize"/>




            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="change password"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:padding="7dp"
                android:textColor="@color/buttonsTextColor"
                android:background="@drawable/back_buttons_public_ripple_effect"
                android:textSize="@dimen/buttonsTextSize"/>





            <Button
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="log out"
                android:padding="7dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:textColor="@color/buttonsTextColor"
                android:background="@drawable/back_buttons_public_ripple_effect"
                android:textSize="@dimen/buttonsTextSize"/>




        </LinearLayout>


</LinearLayout>

